// {{APP_NAME}} — Profile Page (generated by Corral)
// Shows user profile, plan info, and sign-out.
// Usage: <ProfilePage /> or route it at /profile

import React, { useState } from "react";
import { useAuth } from "./auth-context";

export function ProfilePage() {
  const { user, logout, refresh } = useAuth();
  const [name, setName] = useState(user?.name || "");
  const [saving, setSaving] = useState(false);
  const [saved, setSaved] = useState(false);
  const [error, setError] = useState<string | null>(null);

  if (!user) {
    return (
      <div className="corral-profile">
        <p>You are not signed in.</p>
      </div>
    );
  }

  const updateProfile = async (e: React.FormEvent) => {
    e.preventDefault();
    setSaving(true);
    setError(null);
    try {
      const res = await fetch("/api/auth/user/update", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify({ name }),
      });
      if (!res.ok) {
        const err = await res.json().catch(() => ({}));
        throw new Error(err.message || "Failed to update profile");
      }
      await refresh();
      setSaved(true);
      setTimeout(() => setSaved(false), 2000);
    } catch (e: any) {
      setError(e.message);
    } finally {
      setSaving(false);
    }
  };

  const openBillingPortal = async () => {
    try {
      const res = await fetch("/api/corral/billing-portal", {
        method: "POST",
        credentials: "include",
      });
      if (!res.ok) throw new Error("Failed to open billing portal");
      const { url } = await res.json();
      if (url) window.location.href = url;
    } catch (e: any) {
      setError(e.message);
    }
  };

  const planLabels: Record<string, string> = {
    free: "Free",
    pro: "Pro",
    enterprise: "Enterprise",
  };

  return (
    <div className="corral-profile">
      <div className="corral-profile-header">
        {user.image ? (
          <img src={user.image} alt={user.name} className="corral-avatar" />
        ) : (
          <div className="corral-avatar corral-avatar-placeholder">
            {user.name.charAt(0).toUpperCase()}
          </div>
        )}
        <div>
          <h2>{user.name}</h2>
          <p className="corral-email">{user.email}</p>
          <span className="corral-badge corral-badge-plan">
            {planLabels[user.plan] ?? user.plan} Plan
          </span>
          {user.role === "admin" && (
            <span className="corral-badge corral-badge-admin">Admin</span>
          )}
        </div>
      </div>

      <section className="corral-section">
        <h3>Profile</h3>
        {error && <p className="corral-error">{error}</p>}
        <form onSubmit={updateProfile} className="corral-form">
          <label>
            Display Name
            <input
              type="text"
              value={name}
              onChange={(e) => setName(e.target.value)}
              required
              minLength={1}
            />
          </label>
          <button type="submit" disabled={saving} className="corral-btn corral-btn-primary">
            {saving ? "Saving…" : saved ? "✓ Saved" : "Save Changes"}
          </button>
        </form>
      </section>

      <section className="corral-section">
        <h3>Subscription</h3>
        <p>
          Current plan: <strong>{planLabels[user.plan] ?? user.plan}</strong>
        </p>
        {user.plan === "free" ? (
          <a href="/pricing" className="corral-btn corral-btn-primary">
            Upgrade to Pro →
          </a>
        ) : (
          <button
            onClick={openBillingPortal}
            className="corral-btn corral-btn-secondary"
          >
            Manage Billing
          </button>
        )}
      </section>

      <section className="corral-section">
        <h3>Account</h3>
        <button
          onClick={logout}
          className="corral-btn corral-btn-danger"
        >
          Sign Out
        </button>
      </section>
    </div>
  );
}
