// {{APP_NAME}} â€” Profile Page (generated by Corral)
// 3-tab user profile: Account info, Plan & Billing, Danger Zone.
//
// Usage:
//   import { ProfilePage } from "./ProfilePage";
//   <ProfilePage onClose={() => navigate("/")} />
//
// Requires: auth-context.tsx, corral-styles.css
// Template vars rendered at generation time:
//   PAID_PLAN         = "{{PAID_PLAN}}"
//   PAID_PLAN_DISPLAY = "{{PAID_PLAN_DISPLAY}}"
//   PAID_PLAN_PRICE   = {{PAID_PLAN_PRICE}}
//   TRIAL_DAYS        = {{TRIAL_DAYS}}

import { useState } from "react";
import { useAuth } from "{{AUTH_IMPORT_PATH}}";

// â”€â”€â”€ Constants (substituted at generation time) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

const PAID_PLAN         = "{{PAID_PLAN}}";
const PAID_PLAN_DISPLAY = "{{PAID_PLAN_DISPLAY}}";
const PAID_PLAN_PRICE: number = {{PAID_PLAN_PRICE}};
const TRIAL_DAYS        = {{TRIAL_DAYS}};

// â”€â”€â”€ Component â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

export function ProfilePage({ onClose }: { onClose: () => void }) {
  const { user, logout, refresh } = useAuth();

  const [tab, setTab]                   = useState<"account" | "plan" | "danger">("account");
  const [editName, setEditName]         = useState(user?.name || "");
  const [saving, setSaving]             = useState(false);
  const [msg, setMsg]                   = useState<{ text: string; ok: boolean } | null>(null);
  const [confirmDelete, setConfirmDelete] = useState(false);
  const [deleteEmail, setDeleteEmail]   = useState("");
  const [changingPassword, setChangingPassword] = useState(false);
  const [passwords, setPasswords]       = useState({ current: "", new_: "", confirm: "" });
  const [checkingOut, setCheckingOut]   = useState(false);

  if (!user) return null;

  // â”€â”€â”€ Helpers â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

  const flash = (text: string, ok = true) => {
    setMsg({ text, ok });
    setTimeout(() => setMsg(null), 3000);
  };

  // â”€â”€â”€ Actions â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

  const updateName = async () => {
    if (!editName.trim()) { flash("Name cannot be empty", false); return; }
    if (editName.trim() === user.name) return;
    setSaving(true);
    try {
      const res = await fetch("/api/profile/name", {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify({ name: editName.trim() }),
      });
      if (res.ok) {
        await refresh();
        flash("Name updated!");
      } else {
        const e = await res.json().catch(() => ({}));
        flash(e.error || "Failed to update name", false);
      }
    } catch {
      flash("Network error", false);
    } finally {
      setSaving(false);
    }
  };

  const changePassword = async (e: React.FormEvent) => {
    e.preventDefault();
    if (passwords.new_ !== passwords.confirm) { flash("Passwords don't match", false); return; }
    if (passwords.new_.length < 8) { flash("Password must be at least 8 characters", false); return; }
    setSaving(true);
    try {
      const res = await fetch("/api/profile/password", {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify({
          currentPassword: passwords.current,
          newPassword: passwords.new_,
        }),
      });
      if (res.ok) {
        flash("Password changed!");
        setChangingPassword(false);
        setPasswords({ current: "", new_: "", confirm: "" });
      } else {
        const e = await res.json().catch(() => ({}));
        flash(e.error || "Failed to change password", false);
      }
    } catch {
      flash("Network error", false);
    } finally {
      setSaving(false);
    }
  };

  const deleteAccount = async () => {
    if (deleteEmail !== user.email) { flash("Email doesn't match", false); return; }
    try {
      const res = await fetch("/api/profile/delete", {
        method: "DELETE",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify({ confirmEmail: deleteEmail }),
      });
      if (res.ok) {
        await logout();
        onClose();
      } else {
        const e = await res.json().catch(() => ({}));
        flash(e.error || "Failed to delete account", false);
      }
    } catch {
      flash("Network error", false);
    }
  };

  const startCheckout = async () => {
    setCheckingOut(true);
    try {
      const res = await fetch("/api/billing/checkout", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify({ plan: PAID_PLAN }),
      });
      if (res.ok) {
        const { url } = await res.json();
        if (url) {
          window.open(url, "_blank");
        } else {
          flash("No checkout URL returned", false);
        }
      } else {
        const e = await res.json().catch(() => ({}));
        flash(e.error || "Failed to start checkout", false);
      }
    } catch {
      flash("Network error", false);
    } finally {
      setCheckingOut(false);
    }
  };

  // â”€â”€â”€ Derived state â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

  const isPaid       = user.plan === PAID_PLAN;
  const avatarChar   = (user.name || user.email)[0].toUpperCase();
  const planLabel    = isPaid ? PAID_PLAN_DISPLAY : "Free";
  const priceDisplay = PAID_PLAN_PRICE === 0 ? "Free" : `$${PAID_PLAN_PRICE}/mo`;

  // â”€â”€â”€ Render â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

  return (
    <div className="corral-profile-page">

      {/* Header */}
      <div className="corral-admin-header">
        <h2>ğŸ‘¤ Profile</h2>
        <button className="corral-btn corral-btn-secondary" onClick={onClose}>â† Back</button>
      </div>

      {/* Toast */}
      {msg && (
        <div className={`corral-toast ${msg.ok ? "corral-toast-ok" : "corral-toast-err"}`}>
          {msg.text}
        </div>
      )}

      {/* Tabs */}
      <div className="corral-admin-tabs">
        <button
          className={`corral-admin-tab${tab === "account" ? " active" : ""}`}
          onClick={() => setTab("account")}
        >
          Account
        </button>
        <button
          className={`corral-admin-tab${tab === "plan" ? " active" : ""}`}
          onClick={() => setTab("plan")}
        >
          Plan &amp; Billing
        </button>
        <button
          className={`corral-admin-tab${tab === "danger" ? " active" : ""}`}
          onClick={() => setTab("danger")}
        >
          Danger Zone
        </button>
      </div>

      {/* â”€â”€ Account Tab â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */}
      {tab === "account" && (
        <div className="corral-admin-section">
          <div className="corral-profile-card">

            {/* Avatar */}
            <div className="corral-profile-avatar">
              <span className="corral-avatar-large">{avatarChar}</span>
            </div>

            <div className="corral-profile-fields">

              {/* Name */}
              <label className="corral-label">Display Name</label>
              <div style={{ display: "flex", gap: "0.5rem" }}>
                <input
                  type="text"
                  value={editName}
                  onChange={(e) => setEditName(e.target.value)}
                  onKeyDown={(e) => e.key === "Enter" && updateName()}
                  className="corral-input"
                  autoComplete="name"
                />
                <button
                  className="corral-btn corral-btn-small"
                  onClick={updateName}
                  disabled={saving || !editName.trim() || editName.trim() === user.name}
                >
                  {saving ? "â€¦" : "Save"}
                </button>
              </div>

              {/* Email (read-only) */}
              <label className="corral-label" style={{ marginTop: "1rem" }}>Email</label>
              <input
                type="email"
                value={user.email}
                disabled
                className="corral-input"
                style={{ opacity: 0.5, cursor: "not-allowed" }}
              />

              {/* Role (read-only) */}
              <label className="corral-label" style={{ marginTop: "1rem" }}>Role</label>
              <div style={{ paddingBottom: "0.5rem" }}>
                <span className={`corral-role-badge corral-role-${user.role}`}>
                  {user.role}
                </span>
              </div>

              {/* Password */}
              <label className="corral-label" style={{ marginTop: "1rem" }}>Password</label>
              {!changingPassword ? (
                <button
                  className="corral-btn corral-btn-secondary corral-btn-small"
                  onClick={() => setChangingPassword(true)}
                  style={{ alignSelf: "flex-start" }}
                >
                  Change Password
                </button>
              ) : (
                <form onSubmit={changePassword} className="corral-form-stack" style={{ maxWidth: "340px" }}>
                  <input
                    type="password"
                    placeholder="Current password"
                    value={passwords.current}
                    onChange={(e) => setPasswords({ ...passwords, current: e.target.value })}
                    required
                    autoComplete="current-password"
                    className="corral-input"
                  />
                  <input
                    type="password"
                    placeholder="New password (8+ characters)"
                    value={passwords.new_}
                    onChange={(e) => setPasswords({ ...passwords, new_: e.target.value })}
                    required
                    autoComplete="new-password"
                    className="corral-input"
                  />
                  <input
                    type="password"
                    placeholder="Confirm new password"
                    value={passwords.confirm}
                    onChange={(e) => setPasswords({ ...passwords, confirm: e.target.value })}
                    required
                    autoComplete="new-password"
                    className="corral-input"
                  />
                  <div style={{ display: "flex", gap: "0.5rem" }}>
                    <button
                      type="submit"
                      className="corral-btn corral-btn-small"
                      disabled={saving}
                    >
                      {saving ? "â€¦" : "Update Password"}
                    </button>
                    <button
                      type="button"
                      className="corral-btn corral-btn-secondary corral-btn-small"
                      onClick={() => {
                        setChangingPassword(false);
                        setPasswords({ current: "", new_: "", confirm: "" });
                      }}
                    >
                      Cancel
                    </button>
                  </div>
                </form>
              )}

            </div>
          </div>
        </div>
      )}

      {/* â”€â”€ Plan & Billing Tab â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */}
      {tab === "plan" && (
        <div className="corral-admin-section">

          {/* Current plan card */}
          <div className="corral-current-plan-card">
            <div className="corral-current-plan-header">
              <h3>Current Plan</h3>
              <span
                className={`corral-plan-badge corral-plan-${user.plan}`}
                style={{ fontSize: "0.95rem", padding: "0.3rem 1rem" }}
              >
                {planLabel}
              </span>
            </div>

            {isPaid ? (
              /* Paid plan â€” show manage options */
              <div className="corral-plan-details">
                <p>
                  You're on the <strong>{PAID_PLAN_DISPLAY}</strong> plan
                  {PAID_PLAN_PRICE > 0 ? ` â€” ${priceDisplay}` : ""}.
                </p>
                <div style={{ display: "flex", gap: "0.75rem", marginTop: "1rem", flexWrap: "wrap" }}>
                  <button
                    className="corral-btn corral-btn-secondary"
                    onClick={() =>
                      flash("Open your Stripe customer portal to manage billing", true)
                    }
                  >
                    Manage Subscription
                  </button>
                </div>
              </div>
            ) : (
              /* Free plan â€” show upgrade card */
              <div className="corral-plan-details">
                <p>You're on the <strong>Free plan</strong>.</p>
                <div className="corral-upgrade-card">
                  <h4>âš¡ Upgrade to {PAID_PLAN_DISPLAY}</h4>
                  <div className="corral-upgrade-price">
                    {priceDisplay.split("/").map((part, i) => (
                      i === 0
                        ? <span key={i}>{part}</span>
                        : <span key={i} className="corral-upgrade-price-per">/{part}</span>
                    ))}
                  </div>
                  {TRIAL_DAYS > 0 && (
                    <div className="corral-upgrade-trial">
                      {TRIAL_DAYS}-day free trial Â· Cancel anytime
                    </div>
                  )}
                  <button
                    className="corral-btn corral-btn-upgrade"
                    onClick={startCheckout}
                    disabled={checkingOut}
                  >
                    {checkingOut
                      ? "Redirectingâ€¦"
                      : TRIAL_DAYS > 0
                        ? `Start ${TRIAL_DAYS}-Day Free Trial â†’`
                        : "Upgrade Now â†’"
                    }
                  </button>
                  {TRIAL_DAYS > 0 && (
                    <p className="corral-upgrade-fine-print">
                      Credit card required. Cancel before trial ends to avoid charges.
                    </p>
                  )}
                </div>
              </div>
            )}
          </div>

          {/* Usage meter */}
          <div className="corral-usage-section">
            <h3>Plan Status</h3>
            <div className="corral-usage-meter">
              <div className="corral-usage-label">
                <span>Active Plan</span>
                <span className={`corral-plan-badge corral-plan-${user.plan}`}>
                  {user.plan}
                </span>
              </div>
              <div className="corral-usage-bar">
                <div
                  className="corral-usage-fill"
                  style={{ width: isPaid ? "100%" : "15%" }}
                />
              </div>
              <div className="corral-usage-hint">
                {isPaid
                  ? `${PAID_PLAN_DISPLAY} â€” full access enabled`
                  : `Free â€” upgrade to unlock ${PAID_PLAN_DISPLAY} features`
                }
              </div>
            </div>
          </div>

        </div>
      )}

      {/* â”€â”€ Danger Zone Tab â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */}
      {tab === "danger" && (
        <div className="corral-admin-section">
          <div className="corral-danger-zone">
            <h3>âš ï¸ Danger Zone</h3>
            <p className="corral-danger-desc">
              These actions are permanent and cannot be undone.
            </p>

            <div className="corral-danger-card">
              <div className="corral-danger-text">
                <strong>Delete Account</strong>
                <p>
                  Permanently deletes your account, sessions, and all associated data.
                  This cannot be reversed.
                </p>
              </div>

              {!confirmDelete ? (
                <button
                  className="corral-btn corral-btn-danger"
                  onClick={() => setConfirmDelete(true)}
                >
                  Delete My Account
                </button>
              ) : (
                <div className="corral-delete-confirm">
                  <p className="corral-delete-prompt">
                    Type your email to confirm:{" "}
                    <code className="corral-delete-email">{user.email}</code>
                  </p>
                  <input
                    type="email"
                    placeholder={user.email}
                    value={deleteEmail}
                    onChange={(e) => setDeleteEmail(e.target.value)}
                    className="corral-input"
                    autoComplete="off"
                    autoFocus
                  />
                  <div style={{ display: "flex", gap: "0.5rem", marginTop: "0.75rem" }}>
                    <button
                      className="corral-btn corral-btn-danger"
                      onClick={deleteAccount}
                      disabled={deleteEmail !== user.email}
                    >
                      Permanently Delete
                    </button>
                    <button
                      className="corral-btn corral-btn-secondary"
                      onClick={() => {
                        setConfirmDelete(false);
                        setDeleteEmail("");
                      }}
                    >
                      Cancel
                    </button>
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
      )}

    </div>
  );
}
