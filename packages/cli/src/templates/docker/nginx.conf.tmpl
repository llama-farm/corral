# =============================================================================
# Nginx Reverse Proxy — Single Entry Point for Auth + Backend
# =============================================================================
# Routes /api/auth/* to the Corral Node auth server (port 3456).
# Everything else goes to the backend (port 8000).
# Use this for production deployments wanting a unified HTTPS front.
# =============================================================================

upstream auth_server {
    server 127.0.0.1:3456;
}

upstream backend_server {
    server 127.0.0.1:8000;
}

server {
    listen 80;
    server_name {{SERVER_NAME}};

    # -- Auth routes → Node.js (internal port 3456)
    location /api/auth/ {
        proxy_pass http://auth_server;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # -- Everything else → Backend (port 8000)
    location / {
        proxy_pass http://backend_server;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # -- Health check endpoint
    location /health {
        proxy_pass http://backend_server/health;
    }
}
