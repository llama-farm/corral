type Step = 'loading' | 'login' | 'authorize' | 'done' | 'denied' | 'error';

function DeviceVerifyInner() {
  const searchParams = useSearchParams();
  const userCode = searchParams.get('code') || '';
  const router = useRouter();

  // â”€â”€â”€ ADAPT TO YOUR AUTH HOOK â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  // For Better Auth:
  const { user, loading: authLoading } = useAuth();
  // For Rownd:   const { is_authenticated, user } = useRownd();
  // For Auth.js: const { data: session, status } = useSession();
  // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

  const [step, setStep] = useState<Step>('loading');
  const [approving, setApproving] = useState(false);
  const [denying, setDenying] = useState(false);
  const [error, setError] = useState('');

  useEffect(() => {
    if (authLoading) return;
    if (!userCode) { setStep('error'); setError('No device code in URL. Use the link from your terminal.'); return; }
    if (!user) { setStep('login'); return; }
    setStep('authorize');
  }, [authLoading, user, userCode]);

  const handleApprove = async () => {
    setApproving(true);
    setError('');
    try {
      const res = await fetch('/api/corral/device/verify', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ userCode, action: 'approve' }),
      });
      const data = await res.json();
      if (!res.ok) throw new Error(data.error || 'Approval failed');
      setStep('done');
    } catch (err: any) {
      setError(err.message);
    } finally {
      setApproving(false);
    }
  };

  const handleDeny = async () => {
    setDenying(true);
    try {
      const res = await fetch('/api/corral/device/verify', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ userCode, action: 'deny' }),
      });
      if (res.ok) setStep('denied');
    } finally {
      setDenying(false);
    }
  };

  if (step === 'loading' || authLoading) {
    return (
      <div className="device-page">
        {/* â† Replace with your spinner component */}
        <div className="spinner" />
      </div>
    );
  }

  if (step === 'error') {
    return (
      <div className="device-page">
        <div className="device-card">
          <h2>âš ï¸ Invalid link</h2>
          <p className="error">{error}</p>
          <p className="muted">Run <code>[[APP_NAME]] login</code> to start a new auth flow.</p>
        </div>
      </div>
    );
  }

  if (step === 'done') {
    return (
      <div className="device-page">
        <div className="device-card text-center">
          <div className="success-icon">âœ…</div>
          <h2>Device authorized!</h2>
          <p>You can close this tab and return to your terminal.</p>
          <p className="muted">The CLI will show "âœ“ Logged in" momentarily.</p>
        </div>
      </div>
    );
  }

  if (step === 'denied') {
    return (
      <div className="device-page">
        <div className="device-card text-center">
          <div className="denied-icon">ğŸš«</div>
          <h2>Authorization denied</h2>
          <p className="muted">You can close this tab. The CLI received the denial.</p>
        </div>
      </div>
    );
  }

  if (step === 'login') {
    return (
      <div className="device-page">
        <div className="device-card">
          <div className="device-header">
            <span className="icon">ğŸ”</span>
            <h2>Sign in to authorize device</h2>
            <p className="muted">
              <strong>[[APP_NAME]]</strong> CLI is requesting access to your account.
            </p>
            {userCode && (
              <div className="device-code">{userCode}</div>
            )}
          </div>
          {/* Replace with your app's login form / social buttons */}
          <SignInForm
            onSuccess={() => window.location.reload()}
            redirectUrl={`/device/verify?code=${userCode}`}
          />
        </div>
      </div>
    );
  }

  // step === 'authorize'
  // â”€â”€â”€ ADAPT user display to your auth hook's user shape â”€â”€â”€â”€â”€â”€â”€â”€
  const displayName = user?.name || user?.email || 'Unknown user';
  const displayEmail = user?.email || '';
  const initials = displayName.split(' ').map((n: string) => n[0]).join('').slice(0, 2).toUpperCase();
  const plan = user?.plan || 'free';
  // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

  return (
    <div className="device-page">
      <div className="device-card">
        <div className="device-header">
          <span className="icon">ğŸ”</span>
          <h2>Authorize this device?</h2>
          <p className="muted">
            <strong>[[APP_NAME]]</strong> CLI is requesting access to your account
          </p>
        </div>

        {/* Device code confirmation */}
        <div className="code-section">
          <p className="code-label">Confirm this matches your terminal</p>
          <div className="device-code">{userCode}</div>
        </div>

        {/* Logged-in user */}
        <div className="user-row">
          <div className="user-avatar">{initials}</div>
          <div>
            <div className="user-name">{displayName}</div>
            <div className="user-meta">
              {displayEmail}
              {plan && <span className={`badge badge-${plan}`}>{plan}</span>}
            </div>
          </div>
        </div>

        {/* Permissions */}
        <div className="permissions">
          <p className="permissions-title">[[APP_NAME]] CLI will be able to:</p>
          <ul>
            <li>Access your account info and plan</li>
            <li>Run CLI commands on your behalf</li>
            <li>Track usage and access gated features</li>
          </ul>
        </div>

        {error && <p className="error-msg">{error}</p>}

        <div className="device-actions">
          <button
            className="btn btn-danger"
            onClick={handleDeny}
            disabled={approving || denying}
          >
            {denying ? 'Denying...' : 'ğŸš« Deny'}
          </button>
          <button
            className="btn btn-primary"
            onClick={handleApprove}
            disabled={approving || denying}
          >
            {approving ? 'Authorizing...' : 'âœ… Approve'}
          </button>
        </div>

        <p className="switch-account">
          Not you?{' '}
          <button
            className="link-btn"
            onClick={() => {
              // â† Replace with your sign-out call
              fetch('/api/auth/sign-out', { method: 'POST' }).then(() => window.location.reload());
            }}
          >
            Sign in as someone else
          </button>
        </p>
      </div>
    </div>
  );
}

