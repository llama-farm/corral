/* {{APP_NAME}} — Corral UI Styles (generated by Corral) */
/* Import in your app: import './corral-styles.css' */
/* Override any variable to match your brand:            */
/*   :root { --corral-primary: #your-color; }           */

:root {
  --corral-primary: #7c3aed;
  --corral-primary-hover: #6d28d9;
  --corral-danger: #dc2626;
  --corral-danger-hover: #b91c1c;
  --corral-success: #16a34a;
  --corral-success-hover: #15803d;
  --corral-secondary: #4b5563;
  --corral-secondary-hover: #374151;
  --corral-bg: #ffffff;
  --corral-bg-subtle: #f9fafb;
  --corral-border: #e5e7eb;
  --corral-text: #111827;
  --corral-text-muted: #6b7280;
  --corral-radius: 8px;
  --corral-shadow: 0 1px 3px rgba(0,0,0,0.12);
  --corral-shadow-lg: 0 4px 24px rgba(0,0,0,0.15);
}

/* ─── Buttons ─────────────────────────────────────────────────────── */
.corral-btn {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 8px 16px;
  font-size: 14px;
  font-weight: 500;
  border: none;
  border-radius: var(--corral-radius);
  cursor: pointer;
  transition: background 0.15s, opacity 0.15s;
  text-decoration: none;
}

.corral-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.corral-btn-primary {
  background: var(--corral-primary);
  color: #fff;
}
.corral-btn-primary:hover:not(:disabled) {
  background: var(--corral-primary-hover);
}

.corral-btn-secondary {
  background: var(--corral-bg-subtle);
  color: var(--corral-secondary);
  border: 1px solid var(--corral-border);
}
.corral-btn-secondary:hover:not(:disabled) {
  background: var(--corral-border);
}

.corral-btn-danger {
  background: var(--corral-danger);
  color: #fff;
}
.corral-btn-danger:hover:not(:disabled) {
  background: var(--corral-danger-hover);
}

.corral-btn-success {
  background: var(--corral-success);
  color: #fff;
}
.corral-btn-success:hover:not(:disabled) {
  background: var(--corral-success-hover);
}

/* ─── Badges ─────────────────────────────────────────────────────── */
.corral-badge {
  display: inline-block;
  padding: 2px 8px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border-radius: 9999px;
  background: var(--corral-bg-subtle);
  color: var(--corral-secondary);
  border: 1px solid var(--corral-border);
}

.corral-badge-admin {
  background: #fef3c7;
  color: #92400e;
  border-color: #fde68a;
}

.corral-badge-plan {
  background: #ede9fe;
  color: #5b21b6;
  border-color: #ddd6fe;
}

.corral-badge-banned {
  background: #fee2e2;
  color: #991b1b;
  border-color: #fecaca;
}

/* ─── Error / Loading ────────────────────────────────────────────── */
.corral-error {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8px;
  padding: 10px 14px;
  background: #fee2e2;
  color: #991b1b;
  border: 1px solid #fecaca;
  border-radius: var(--corral-radius);
  font-size: 14px;
  margin-bottom: 16px;
}

.corral-error button {
  background: none;
  border: none;
  cursor: pointer;
  font-size: 18px;
  color: inherit;
  padding: 0;
  line-height: 1;
}

.corral-loading {
  text-align: center;
  padding: 32px;
  color: var(--corral-text-muted);
}

.corral-empty {
  text-align: center;
  padding: 32px;
  color: var(--corral-text-muted);
}

/* ─── Admin Panel ────────────────────────────────────────────────── */
.corral-admin-panel {
  max-width: 900px;
  margin: 0 auto;
  padding: 24px;
}

.corral-admin-header {
  display: flex;
  align-items: baseline;
  gap: 12px;
  margin-bottom: 20px;
}

.corral-admin-header h2 {
  font-size: 22px;
  font-weight: 700;
  margin: 0;
  color: var(--corral-text);
}

.corral-admin-subtitle {
  font-size: 14px;
  color: var(--corral-text-muted);
  margin: 0;
}

.corral-search {
  width: 100%;
  padding: 8px 12px;
  font-size: 14px;
  border: 1px solid var(--corral-border);
  border-radius: var(--corral-radius);
  margin-bottom: 16px;
  box-sizing: border-box;
  outline: none;
}

.corral-search:focus {
  border-color: var(--corral-primary);
  box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.15);
}

.corral-table-wrapper {
  overflow-x: auto;
  border: 1px solid var(--corral-border);
  border-radius: var(--corral-radius);
}

.corral-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 14px;
}

.corral-table th {
  padding: 10px 14px;
  text-align: left;
  font-weight: 600;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.04em;
  color: var(--corral-text-muted);
  background: var(--corral-bg-subtle);
  border-bottom: 1px solid var(--corral-border);
}

.corral-table td {
  padding: 10px 14px;
  border-bottom: 1px solid var(--corral-border);
  vertical-align: middle;
}

.corral-table tr:last-child td {
  border-bottom: none;
}

.corral-table tr.corral-banned td {
  opacity: 0.6;
}

.corral-table select {
  font-size: 13px;
  padding: 4px 8px;
  border: 1px solid var(--corral-border);
  border-radius: 4px;
  background: var(--corral-bg);
}

.corral-user-cell {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.corral-user-cell strong {
  font-weight: 600;
}

.corral-user-cell span {
  font-size: 12px;
  color: var(--corral-text-muted);
}

.corral-date {
  font-size: 12px;
  color: var(--corral-text-muted);
}

/* ─── Profile Page ───────────────────────────────────────────────── */
.corral-profile {
  max-width: 540px;
  margin: 0 auto;
  padding: 24px;
}

.corral-profile-header {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 28px;
}

.corral-profile-header h2 {
  font-size: 20px;
  font-weight: 700;
  margin: 0 0 4px;
  color: var(--corral-text);
}

.corral-email {
  font-size: 14px;
  color: var(--corral-text-muted);
  margin: 0 0 8px;
}

.corral-avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  object-fit: cover;
}

.corral-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26px;
  font-weight: 700;
  background: var(--corral-primary);
  color: #fff;
}

.corral-section {
  margin-bottom: 28px;
  padding-bottom: 28px;
  border-bottom: 1px solid var(--corral-border);
}

.corral-section:last-child {
  border-bottom: none;
}

.corral-section h3 {
  font-size: 16px;
  font-weight: 600;
  margin: 0 0 12px;
  color: var(--corral-text);
}

.corral-form {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.corral-form label {
  display: flex;
  flex-direction: column;
  gap: 4px;
  font-size: 13px;
  font-weight: 500;
  color: var(--corral-text);
}

.corral-form input {
  padding: 8px 12px;
  font-size: 14px;
  border: 1px solid var(--corral-border);
  border-radius: var(--corral-radius);
  outline: none;
}

.corral-form input:focus {
  border-color: var(--corral-primary);
  box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.15);
}

/* ─── AccountMenu ────────────────────────────────────────────────── */
.corral-account-menu {
  position: relative;
  display: inline-block;
}

.corral-account-trigger {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px 12px;
  background: none;
  border: 1px solid var(--corral-border);
  border-radius: var(--corral-radius);
  cursor: pointer;
  font-size: 14px;
  color: var(--corral-text);
  transition: border-color 0.15s;
}

.corral-account-trigger:hover {
  border-color: var(--corral-primary);
}

.corral-account-avatar {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  object-fit: cover;
}

.corral-account-avatar-placeholder {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: var(--corral-primary);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: 700;
}

.corral-account-dropdown {
  position: absolute;
  top: calc(100% + 6px);
  right: 0;
  min-width: 200px;
  background: var(--corral-bg);
  border: 1px solid var(--corral-border);
  border-radius: var(--corral-radius);
  box-shadow: var(--corral-shadow-lg);
  z-index: 1000;
  overflow: hidden;
}

.corral-account-info {
  padding: 12px 14px;
  border-bottom: 1px solid var(--corral-border);
}

.corral-account-name {
  font-weight: 600;
  font-size: 14px;
  color: var(--corral-text);
}

.corral-account-email {
  font-size: 12px;
  color: var(--corral-text-muted);
  margin-top: 2px;
}

.corral-account-plan {
  margin-top: 6px;
}

.corral-dropdown-item {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 14px;
  font-size: 14px;
  color: var(--corral-text);
  background: none;
  border: none;
  width: 100%;
  text-align: left;
  cursor: pointer;
  text-decoration: none;
  transition: background 0.1s;
}

.corral-dropdown-item:hover {
  background: var(--corral-bg-subtle);
}

.corral-dropdown-item.corral-dropdown-danger {
  color: var(--corral-danger);
}

.corral-dropdown-divider {
  height: 1px;
  background: var(--corral-border);
  margin: 4px 0;
}

/* ─── Auth Modal ─────────────────────────────────────────────────── */
.corral-modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 16px;
}

.corral-modal {
  background: var(--corral-bg);
  border-radius: var(--corral-radius);
  padding: 28px;
  width: 100%;
  max-width: 380px;
  box-shadow: var(--corral-shadow-lg);
}

.corral-modal h2 {
  font-size: 20px;
  font-weight: 700;
  margin: 0 0 20px;
  color: var(--corral-text);
}

.corral-modal-toggle {
  margin-top: 14px;
  text-align: center;
  font-size: 13px;
  color: var(--corral-text-muted);
}

.corral-modal-toggle button {
  background: none;
  border: none;
  color: var(--corral-primary);
  cursor: pointer;
  font-weight: 600;
  padding: 0;
  font-size: 13px;
}
