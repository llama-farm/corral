type Step = 'loading' | 'login' | 'authorize' | 'done' | 'denied' | 'error';

interface Props {
  /** Override the app name shown in the UI (default: from corral config) */
  appName?: string;
}

export function DeviceVerify({ appName = '{{APP_NAME}}' }: Props) {
  const [searchParams] = useSearchParams();
  const userCode = searchParams.get('code') || '';

  // Adapt this to your auth hook
  const { user, loading: authLoading, signOut } = useAuth();

  const [step, setStep] = useState<Step>('loading');
  const [approving, setApproving] = useState(false);
  const [denying, setDenying] = useState(false);
  const [error, setError] = useState('');

  useEffect(() => {
    if (authLoading) return;
    if (!userCode) {
      setStep('error');
      setError('No device code in URL. Use the link from your CLI terminal.');
      return;
    }
    setStep(user ? 'authorize' : 'login');
  }, [authLoading, user, userCode]);

  const verifyDevice = async (action: 'approve' | 'deny') => {
    if (action === 'approve') setApproving(true);
    else setDenying(true);
    setError('');

    try {
      const res = await fetch('/api/corral/device/verify', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',  // Important: sends session cookie
        body: JSON.stringify({ userCode, action }),
      });
      const data = await res.json().catch(() => ({}));
      if (!res.ok) throw new Error(data.error || `Request failed: ${res.status}`);
      setStep(action === 'approve' ? 'done' : 'denied');
    } catch (err: any) {
      setError(err.message);
    } finally {
      setApproving(false);
      setDenying(false);
    }
  };

  // â”€â”€â”€ Loading â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  if (step === 'loading' || authLoading) {
    return (
      <div className="device-page">
        <div className="device-card center">
          <div className="spinner" />
          <p className="muted">Loading...</p>
        </div>
      </div>
    );
  }

  // â”€â”€â”€ Error â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  if (step === 'error') {
    return (
      <div className="device-page">
        <div className="device-card">
          <div className="device-icon">âš ï¸</div>
          <h2 className="device-title">Invalid link</h2>
          <div className="alert alert-error">{error}</div>
          <p className="muted mt-4">
            Run <code className="code-inline">{appName} login</code> to start a new auth flow.
          </p>
        </div>
      </div>
    );
  }

  // â”€â”€â”€ Success â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  if (step === 'done') {
    return (
      <div className="device-page">
        <div className="device-card center">
          <div className="device-icon large">âœ…</div>
          <h2 className="device-title">Device authorized!</h2>
          <p className="muted">The CLI now has access to your account.</p>
          <div className="alert alert-success mt-4">
            You can close this tab and return to your terminal.
          </div>
          <p className="text-small muted mt-2">
            The CLI will show "âœ“ Logged in" momentarily.
          </p>
        </div>
      </div>
    );
  }

  // â”€â”€â”€ Denied â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  if (step === 'denied') {
    return (
      <div className="device-page">
        <div className="device-card center">
          <div className="device-icon large">ğŸš«</div>
          <h2 className="device-title">Authorization denied</h2>
          <p className="muted">The CLI was denied access. You can close this tab.</p>
        </div>
      </div>
    );
  }

  // â”€â”€â”€ Login required â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  if (step === 'login') {
    return (
      <div className="device-page">
        <div className="device-card">
          <div className="device-icon">ğŸ”</div>
          <h2 className="device-title">Sign in to authorize device</h2>
          <p className="muted">
            <strong>{appName}</strong> CLI is requesting access to your account.
          </p>

          {userCode && (
            <div className="device-code-preview">
              <p className="code-label">Device code</p>
              <div className="device-code">{userCode}</div>
            </div>
          )}

          {/* Your login form â€” handles social auth, email/password, etc. */}
          <LoginForm
            onSuccess={() => window.location.reload()}
          />
        </div>
      </div>
    );
  }

  // â”€â”€â”€ Authorize â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  // Adapt these to your user object shape
  const displayName = (user as any)?.name || (user as any)?.email || 'User';
  const displayEmail = (user as any)?.email || '';
  const plan = (user as any)?.plan || (user as any)?.subscription?.plan || 'free';
  const initials = displayName.split(' ').map((n: string) => n[0]).join('').slice(0, 2).toUpperCase();

  return (
    <div className="device-page">
      <div className="device-card">
        {/* Header */}
        <div className="device-header">
          <div className="device-icon">ğŸ”</div>
          <h2 className="device-title">Authorize this device?</h2>
          <p className="muted">
            <strong>{appName}</strong> CLI is requesting access to your account
          </p>
        </div>

        {/* Device code â€” user confirms it matches their terminal */}
        <div className="code-section">
          <p className="code-label">Confirm this matches your terminal</p>
          <div className="device-code">{userCode}</div>
          <p className="code-hint">If this code doesn't match, click Deny immediately.</p>
        </div>

        {/* Logged-in user */}
        <div className="user-row">
          <div className="user-avatar">{initials}</div>
          <div className="user-info">
            <div className="user-name">{displayName}</div>
            <div className="user-meta">
              {displayEmail}
              {plan && <span className={`plan-badge plan-${plan}`}>{plan}</span>}
            </div>
          </div>
          <button
            className="link-btn text-small"
            onClick={() => { signOut(); setTimeout(() => window.location.reload(), 100); }}
          >
            Switch
          </button>
        </div>

        {/* What the app gets */}
        <div className="permissions-box">
          <p className="permissions-title">{appName} CLI will be able to:</p>
          <ul className="permissions-list">
            <li>Read your account info, email, and plan</li>
            <li>Execute CLI commands on your behalf</li>
            <li>Track feature usage to your account</li>
          </ul>
        </div>

        {/* Error message */}
        {error && (
          <div className="alert alert-error" role="alert">
            {error}
          </div>
        )}

        {/* Approve / Deny */}
        <div className="device-actions">
          <button
            className="btn btn-outline btn-danger"
            onClick={() => verifyDevice('deny')}
            disabled={approving || denying}
            type="button"
          >
            {denying ? '...' : 'ğŸš« Deny'}
          </button>
          <button
            className="btn btn-primary"
            onClick={() => verifyDevice('approve')}
            disabled={approving || denying}
            type="button"
          >
            {approving ? 'Authorizing...' : 'âœ… Approve'}
          </button>
        </div>

        <p className="switch-hint">
          Wrong account?{' '}
          <button
            className="link-btn"
            onClick={() => { signOut(); setTimeout(() => window.location.reload(), 100); }}
          >
            Sign in as someone else
          </button>
        </p>
      </div>
    </div>
  );
}

