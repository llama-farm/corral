import React, { useState, useRef, useEffect } from "react";
import { useAuth } from "../auth-context";

interface AccountMenuProps {
  /** Called when user clicks Profile ‚Äî default: navigate to /profile */
  onProfile?: () => void;
  /** Called when user clicks Admin Panel ‚Äî default: navigate to /admin */
  onAdmin?: () => void;
  /** Called when user clicks Upgrade ‚Äî default: navigate to /pricing */
  onUpgrade?: () => void;
}

export function AccountMenu({ onProfile, onAdmin, onUpgrade }: AccountMenuProps) {
  const { user, loading, login, signup, logout } = useAuth();
  const [open, setOpen] = useState(false);
  const [showAuthModal, setShowAuthModal] = useState(false);
  const [authMode, setAuthMode] = useState<"signin" | "signup">("signin");
  const menuRef = useRef<HTMLDivElement>(null);

  // Close dropdown on outside click
  useEffect(() => {
    function handleClick(e: MouseEvent) {
      if (menuRef.current && !menuRef.current.contains(e.target as Node)) {
        setOpen(false);
      }
    }
    document.addEventListener("mousedown", handleClick);
    return () => document.removeEventListener("mousedown", handleClick);
  }, []);

  if (loading) {
    return (
      <div className="corral-account-menu">
        <div className="corral-account-trigger" style={{ opacity: 0.5 }}>
          ‚Ä¶
        </div>
      </div>
    );
  }

  if (!user) {
    return (
      <>
        <button
          className="corral-btn corral-btn-primary"
          onClick={() => { setAuthMode("signin"); setShowAuthModal(true); }}
        >
          Sign In
        </button>

        {showAuthModal && (
          <AuthModal
            mode={authMode}
            onModeChange={setAuthMode}
            onClose={() => setShowAuthModal(false)}
            login={login}
            signup={signup}
          />
        )}
      </>
    );
  }

  const initials = user.name?.charAt(0).toUpperCase() || user.email.charAt(0).toUpperCase();
  const isAdmin = user.role === "admin";
  const isFree = !user.plan || user.plan === "free";

  return (
    <div className="corral-account-menu" ref={menuRef}>
      <button
        className="corral-account-trigger"
        onClick={() => setOpen((o) => !o)}
        aria-haspopup="true"
        aria-expanded={open}
      >
        {user.image ? (
          <img src={user.image} alt={user.name} className="corral-account-avatar" />
        ) : (
          <div className="corral-account-avatar-placeholder">{initials}</div>
        )}
        <span>{user.name || user.email}</span>
        <span style={{ fontSize: 10 }}>{open ? "‚ñ≤" : "‚ñº"}</span>
      </button>

      {open && (
        <div className="corral-account-dropdown" role="menu">
          {/* User info */}
          <div className="corral-account-info">
            <div className="corral-account-name">{user.name}</div>
            <div className="corral-account-email">{user.email}</div>
            <div className="corral-account-plan">
              <span className="corral-badge corral-badge-plan">{user.plan || "free"}</span>
              {isAdmin && <span className="corral-badge corral-badge-admin" style={{ marginLeft: 4 }}>admin</span>}
            </div>
          </div>

          {/* Profile */}
          <button
            className="corral-dropdown-item"
            role="menuitem"
            onClick={() => {
              setOpen(false);
              if (onProfile) onProfile();
              else window.location.href = "/profile";
            }}
          >
            üë§ Profile
          </button>

          {/* Upgrade (free users only) */}
          {isFree && (
            <button
              className="corral-dropdown-item"
              role="menuitem"
              style={{ color: "var(--corral-primary)", fontWeight: 600 }}
              onClick={() => {
                setOpen(false);
                if (onUpgrade) onUpgrade();
                else window.location.href = "/pricing";
              }}
            >
              ‚ö° Upgrade to Pro
            </button>
          )}

          {/* Admin Panel (admin only) */}
          {isAdmin && (
            <button
              className="corral-dropdown-item"
              role="menuitem"
              onClick={() => {
                setOpen(false);
                if (onAdmin) onAdmin();
                else window.location.href = "/admin";
              }}
            >
              üõ°Ô∏è Admin Panel
            </button>
          )}

          <div className="corral-dropdown-divider" />

          {/* Sign out */}
          <button
            className="corral-dropdown-item corral-dropdown-danger"
            role="menuitem"
            onClick={async () => {
              setOpen(false);
              await logout();
            }}
          >
            üö™ Sign Out
          </button>
        </div>
      )}
    </div>
  );
}

// ‚îÄ‚îÄ‚îÄ Auth Modal (sign in / sign up) ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ

interface AuthModalProps {
  mode: "signin" | "signup";
  onModeChange: (mode: "signin" | "signup") => void;
  onClose: () => void;
  login: (email: string, password: string) => Promise<void>;
  signup: (email: string, password: string, name: string) => Promise<void>;
}

function AuthModal({ mode, onModeChange, onClose, login, signup }: AuthModalProps) {
  const [email, setEmail] = useState("");
  const [password, setPassword] = useState("");
  const [name, setName] = useState("");
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState<string | null>(null);

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setLoading(true);
    setError(null);
    try {
      if (mode === "signin") {
        await login(email, password);
      } else {
        await signup(email, password, name);
      }
      onClose();
    } catch (e: any) {
      setError(e.message);
    } finally {
      setLoading(false);
    }
  };

  // Close on overlay click
  const handleOverlay = (e: React.MouseEvent<HTMLDivElement>) => {
    if (e.target === e.currentTarget) onClose();
  };

  return (
    <div className="corral-modal-overlay" onClick={handleOverlay}>
      <div className="corral-modal" role="dialog" aria-modal="true">
        <h2>{mode === "signin" ? "Sign In" : "Create Account"}</h2>

        {error && (
          <div className="corral-error" style={{ marginBottom: 14 }}>
            {error}
            <button onClick={() => setError(null)}>√ó</button>
          </div>
        )}

        <form onSubmit={handleSubmit} className="corral-form">
          {mode === "signup" && (
            <label>
              Name
              <input
                type="text"
                value={name}
                onChange={(e) => setName(e.target.value)}
                required
                autoComplete="name"
                placeholder="Your Name"
              />
            </label>
          )}
          <label>
            Email
            <input
              type="email"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              required
              autoComplete="email"
              placeholder="you@example.com"
            />
          </label>
          <label>
            Password
            <input
              type="password"
              value={password}
              onChange={(e) => setPassword(e.target.value)}
              required
              autoComplete={mode === "signin" ? "current-password" : "new-password"}
              placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              minLength={8}
            />
          </label>
          <button
            type="submit"
            disabled={loading}
            className="corral-btn corral-btn-primary"
            style={{ width: "100%", justifyContent: "center" }}
          >
            {loading
              ? "‚Ä¶"
              : mode === "signin"
              ? "Sign In"
              : "Create Account"}
          </button>
        </form>

        <div className="corral-modal-toggle">
          {mode === "signin" ? (
            <>
              No account?{" "}
              <button onClick={() => onModeChange("signup")}>Sign up free</button>
            </>
          ) : (
            <>
              Already have an account?{" "}
              <button onClick={() => onModeChange("signin")}>Sign in</button>
            </>
          )}
        </div>
      </div>
    </div>
  );
}
